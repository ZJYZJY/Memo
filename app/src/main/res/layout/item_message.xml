<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_item_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <com.donutcn.widgetlib.widget.CircleImageView
                android:id="@+id/message_item_icon"
                android:layout_width="@dimen/icon_message_user"
                android:layout_height="@dimen/icon_message_user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:src="@mipmap/user_icon" />

            <TextView
                android:id="@+id/message_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/message_item_icon"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_toEndOf="@+id/message_item_icon"
                android:layout_toRightOf="@+id/message_item_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="360只能硬件软件工程师等你来"
                android:textColor="@color/textPrimaryDark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/message_item_icon"
                android:layout_alignLeft="@+id/message_item_title"
                android:layout_alignStart="@+id/message_item_title"
                android:layout_toEndOf="@+id/message_item_icon"
                android:layout_toRightOf="@+id/message_item_icon"
                android:text="6-15 10:32"
                android:textColor="@color/textPrimary" />
        </RelativeLayout>

        <Button
            android:id="@+id/message_item_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/message_item_btn_width"
            android:layout_height="match_parent"
            android:background="@drawable/selector_blue_btn"
            android:text="查看简历"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/padding_large"
        android:text="新增2人投递简历，目前已收到34份简历"
        android:textColor="@color/textPrimaryDark" />

    <TextView
        android:id="@+id/message_item_extra_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@color/colorPrimary"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/padding_large"
        android:text="9成新的iPhone便宜卖了。"
        android:textColor="@color/textPrimaryDark"
        android:visibility="gone"/>
</LinearLayout>