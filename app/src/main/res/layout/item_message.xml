<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="4dp">

            <com.donutcn.widgetlib.CircleImageView
                android:id="@+id/message_item_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:src="@mipmap/user_icon" />

            <TextView
                android:id="@+id/message_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/message_item_icon"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/message_item_icon"
                android:layout_toRightOf="@+id/message_item_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="360只能硬件软件工程师等你来"
                android:textColor="@color/textPrimaryDark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/message_item_icon"
                android:layout_alignLeft="@+id/message_item_title"
                android:layout_alignStart="@+id/message_item_title"
                android:layout_toEndOf="@+id/message_item_icon"
                android:layout_toRightOf="@+id/message_item_icon"
                android:text="6-15 10:32"
                android:textColor="@color/textPrimary" />
        </RelativeLayout>

        <Button
            android:id="@+id/message_item_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_blue_btn"
            android:text="查看简历"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="12dp"
        android:text="新增2人投递简历，目前已收到34份简历"
        android:textColor="@color/textPrimaryDark" />

    <TextView
        android:id="@+id/message_item_extra_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="12dp"
        android:text="9成新的iPhone便宜卖了。"
        android:textColor="@color/textPrimaryDark" />
</LinearLayout>