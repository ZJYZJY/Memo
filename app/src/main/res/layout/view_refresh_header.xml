<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_small">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tr_head_height">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/icon_normal_icon"
                android:layout_height="@dimen/icon_normal_icon"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow" />

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:src="@drawable/anim_loading_view"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tr_head_height"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_toRightOf="@+id/img_container"
            android:layout_toEndOf="@+id/img_container"
            android:gravity="center_vertical"
            android:text="下拉刷新"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>