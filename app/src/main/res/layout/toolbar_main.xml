<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/colorPrimary">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tl_indicator_color="#9b3b3b"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="#292929"
        app:tl_textUnselectColor="#7e7e7e"
        app:tl_textsize="18sp" />

    <ImageView
        android:id="@+id/user_center"
        android:layout_width="@dimen/icon_toolbar_user"
        android:layout_height="@dimen/icon_toolbar_user"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/padding_normal_icon"
        android:src="@drawable/mine" />
</RelativeLayout>