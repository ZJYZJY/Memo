<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?selectableItemBackground"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_content_type"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/bg_blue"
        android:contentDescription="@string/app_name"
        android:padding="16dp"
        android:src="@drawable/type_recruit" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/iv_content_type"
        android:layout_toRightOf="@+id/iv_content_type"
        android:text="360智能软件工程师等你来"
        android:textColor="@color/textPrimaryDark"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="每年在全国各大高校招聘应届毕业生数百名，该项目旨在为有全职求职意愿的大大的阿斯顿阿斯顿"
        android:textColor="@color/textPrimary" />

    <LinearLayout
        android:id="@+id/iv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/foot_view"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/iv_container"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="3小时前"
            android:textColor="@color/textPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_publish_time"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_upvote_fill" />

            <TextView
                android:id="@+id/tv_upvote"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:text="20"
                android:textColor="@color/textPrimary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/comment_fill" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:text="20"
                android:textColor="@color/textPrimary" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>