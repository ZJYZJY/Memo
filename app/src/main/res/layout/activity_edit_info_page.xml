<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_without_btn" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_line"
        android:background="@color/background_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/blank_item_divider"
        android:background="@color/background_blank" />

    <RelativeLayout
        android:id="@+id/edit_info_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:padding="@dimen/padding_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/textPrimaryDark" />

        <com.donutcn.widgetlib.widget.CircleImageView
            android:id="@+id/edit_info_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/user_default_icon"
            app:civ_border_color="@color/border_gray"
            app:civ_border_width="@dimen/px_line" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/blank_item_divider"
        android:background="@color/background_blank" />

    <RelativeLayout
        android:id="@+id/edit_info_nickname_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:padding="@dimen/padding_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/textPrimaryDark" />

        <TextView
            android:id="@+id/edit_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLength="16"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:text="ZJ烨"
            android:textColor="@color/textPrimary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_line"
        android:background="@color/background_gray" />

    <RelativeLayout
        android:id="@+id/edit_info_gender_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:padding="@dimen/padding_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/textPrimaryDark" />

        <TextView
            android:id="@+id/edit_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未设置"
            android:textColor="@color/textPrimary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/blank_item_divider"
        android:background="@color/background_blank" />

    <RelativeLayout
        android:id="@+id/edit_info_signature_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:padding="@dimen/padding_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个性签名"
            android:textColor="@color/textPrimaryDark" />

        <TextView
            android:id="@+id/edit_info_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="4"
            android:maxWidth="200dp"
            android:text="在这里可以设定自己的个性签名"
            android:textColor="@color/textPrimary" />
    </RelativeLayout>
</LinearLayout>
